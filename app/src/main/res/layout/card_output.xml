<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardViewOutput"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:layout_weight="2"
    android:backgroundTint="#121212"
    android:gravity="bottom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <LinearLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/main_border"
        android:orientation="vertical"
        android:padding="@dimen/llPadding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/main_border"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="@dimen/llPadding">

            <TextView
                android:id="@+id/outputTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="5"
                android:fontFamily="monospace"
                android:inputType="text|textMultiLine|textNoSuggestions"
                android:textColor="@android:color/white"
                />

            <LinearLayout
                android:background="@drawable/output_left_button_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/clearoutputBtn"
                    android:background="@drawable/main_border"
                    android:padding="@dimen/imageviewBtnPad"
                    android:layout_margin="@dimen/imageviewMargin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:clickable="true"
                    android:src="@drawable/clear" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end|bottom"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <ImageView
                        android:id="@+id/shareahatsappBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:adjustViewBounds="true"
                        android:background="@drawable/main_border"
                        android:clickable="true"
                        android:src="@drawable/whatsapp"
                        android:padding="@dimen/imageviewBtnPad"
                        android:layout_margin="@dimen/imageviewMargin"
                        />

                    <ImageView
                        android:id="@+id/searchoutputGoogleBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="@dimen/imageviewMargin"
                        android:background="@drawable/main_border"
                        android:clickable="true"
                        android:src="@drawable/chrome"
                        android:padding="@dimen/imageviewBtnPad"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>