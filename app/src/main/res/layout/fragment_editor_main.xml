<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:id="@+id/mainLayout"
    android:orientation="vertical"
    android:padding="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:padding="8dp"
            android:id="@+id/progress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:visibility="gone" />



        <com.benmohammad.yoyo.utils.NumberedEditText
            android:id="@+id/codebox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignBottom="@id/cardViewOutput"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/numberedETMargin"
            android:layout_marginBottom="@dimen/numberedETMarginBottom"
            android:layout_weight="16"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="monospace"
            android:gravity="top|left"
            android:hint="Type Java code here...."
            android:inputType="textMultiLine|textNoSuggestions"
            android:paddingLeft="14dp"
            android:textColor="#fff"
            android:textColorHint="#D3D3D3"
            android:textSize="@dimen/textSizeNumberedEt"
            android:visibility="visible" />

        <include layout="@layout/card_output"/>



    </LinearLayout>
</RelativeLayout>